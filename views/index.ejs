<body>
    <div class="container col-xxl-12 pt-5 ">
        <h1 class="fw-bold">Weather Forecast</h1>
        <p>Get current weather information for any location</p>
        <div class="d-flex flex-lg-row search-bar border border-white rounded">
            
            <input type="text" placeholder="Enter city name (e.g., London, Tokyo, New York)">
            <button class="rounded">Search</button>
            
        </div>
        <div class="location-button">
            <button>Use My Location</button>
        </div>
   
<div class="form-check form-switch d-flex flex-row justify-content-evenly">
    <label class="form-check-label" for="flexSwitchCheckChecked">°F</label>
  <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
  <label class="form-check-label" for="flexSwitchCheckChecked">°C</label>
</div>
        </div>
       <!--<div class="error-message">
            Unable to access your location. Please allow location access or search manually.
        </div>-->
        <div class="weather-details">
            <h2>Weather Details</h2>
            <p>Feels Like</p>
            <p>Humidity</p>
            <p>Wind</p>
            <p>Pressure</p>
        </div>

        <div class="forecast">
            <h3>5-Day Forecast</h3>
        </div>
    
</body>
